---
---
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100..700;1,100..700&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<style is:global >
	#body h1, #body h2, h1,h2,h3,h4,h5,h6 {
		font-family: 'Montserrat', sans-serif;
		font-weight: 800;
		font-size: 2rem;
		margin: 5px;
		margin-top: 15px;
	}

	strong, b {
		font-weight: 900;
		font-size: 110%;
	}

	/* code, pre {
		font-family: 'Martian Mono', monospace;
		font-weight: 300;
	} */

	h1,h2 {
		font-size: 3rem;
	}

	h5,h6 {
		font-size: 1.5rem;
		margin: 0;
	}

	#hdr {
		background-image: url(/circuit.png);
		background-attachment: fixed;
		background-position: center;
		background-size: cover;
		display: flex;
		flex-direction: column;
		box-sizing: border-box;
		gap: 15px;
		justify-content: center;
		align-items: center;
		width: 100%;
		padding: 20px 15px;
		text-align: center;
	}

	#hdr img.small {
		height: auto;
		max-height: 15dvh;
		max-width: 100%;
	}

	body, button {
		margin: 0;

		font-family: 'IBM Plex Sans', sans-serif;
		font-weight: 600;
		font-size: 1.2rem;

		display: flex;
		flex-direction: column;
		align-items: center;
		color: white;
		vertical-align: middle;
	}

	img {
		border-radius: 2px;
		margin: 3px;
	}

	html {
		background: rgb(21, 21, 22);
	}

	#container {
		width: 900px;
		display: flex;
		flex-direction: column;
	}

	#main > * {
		padding-top: 20px;
	}

	#content p {
		text-indent: 20px;
	}
	
	p {
		margin: 7px 10px; 
	}

	p.small {
		font-size: 0.8rem;
		color: #c3c3c3;
	}

	div.article {
		background: black;
		padding: 20px;
		border-radius: 5px;
		margin: 3px;
		margin-bottom: 20px;
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	p img {
		vertical-align: middle;
	}

	a:not(.nostyle,a:has(button)) {
		text-decoration: underline;
		color: white;
		cursor: pointer;
	}

	button {
		outline: none;
		color: white;
		cursor: pointer;
		border: 30px solid white;
		border-image: url(/border.svg) 30% fill;
		background: transparent;
		border-image-repeat: stretch;
		font-size: 1.4rem;
		font-weight: 800;
		margin: 20px 0;
		padding: 3px;
		width: 100%;
	}

	button:hover {
		transition: all 0.1s ease-in-out;
		transform: scale(1.03) skewX(-2deg);
	}

	a:visited {
		color: #d7d7d7;
	}

	#main {
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;

		width: 100%;
		padding: 20px;
		box-sizing: border-box;
		flex-wrap: wrap;
		gap: 20px;
	}

	#sidebar {
		flex-basis: 300px;
		flex-grow: 1;
	}

	.top {
		padding-top: 0;
		margin-top: 0;
	}

	.bottom {
		padding-bottom: 0;
		margin-bottom: 0;
	}

	.breadcrumb {
		color: gray;
		font-size: 1.4rem;
	}

	#content {
		flex-grow: 10;
		flex-basis: 600px;
	}

	hr {
		width: 100%;
		padding-top: 0;
		margin: 20px 0;
		border: none;
		background: white;
		
		height: 5px;
	}

	.post {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
	}

	.thumb {
		margin-right: 20px;
		max-height: 100px;
	}

	.details {
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
	}

	.big, #body img {
		margin: auto;
		display: block;
		max-width: 100%;
	}

	.big {
		margin: 20px auto;
	}

	a.intralink {
		color: white;
		text-decoration: none;
	}

	a.intralink:hover {
		text-decoration: underline;
	}

	#toc ol {
		counter-reset: item;
	}

	#toc li {
		counter-increment: item;
	}

	#toc li::marker {
		content: counters(item, ".") "  ";
	}

	@media screen and (max-width: 600px) {
		#main {padding: 10px;}
		#hdr img.small { max-height: 5dvh; }

		h1,h2 {
			font-size: 2.5rem;
		}

		.no-border-mobile {
			border:none !important;
		}
	}

	pre {
		text-wrap: wrap;
		padding: 0.5em;
		background: #191d1a;
		border-radius: 10px;
	}

	.frame {
		border: 20px solid white;
		border-image: url(/border.svg) 30% fill;
		border-image-repeat: stretch;
	}

	#footer {
		background: black;
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.bracket {
		background-image: url(/bracket.svg);
		background-position: bottom 0 left -1px;
		padding-left: 15px;
		padding-bottom: 5px;
		margin: 15px 0;
		background-repeat: no-repeat;
		background-size: contain;
	}

	.sub {
		color: #d9d9d9;
    font-size: 0.9rem;
    margin-top: 5px;
	}
	
	/* https://stackoverflow.com/a/54702294 */
	.rainbow {
		background: linear-gradient(to right, #ff1797, #ffc917);
		background-clip: text;
		color: transparent;
		animation: rainbow_animation 6s ease-in-out infinite;
		background-size: 400% 100%;
	}

	@keyframes rainbow_animation {
		0%,100% { background-position: 0 0; }
		50% { background-position: 50% 0; }
	}
</style>